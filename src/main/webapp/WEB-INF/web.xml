<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
            <url-pattern>*.html</url-pattern>
        </web-resource-collection>
        <auth-constraint/>
    </security-constraint>

    <servlet>
        <servlet-name>visualisation</servlet-name>
        <servlet-class>ait.servlet.VisualisationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>visualisation</servlet-name>
        <url-pattern>/visualisation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ait.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>datasets</servlet-name>
        <servlet-class>ait.servlet.DatasetsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>datasets</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cart</servlet-name>
        <servlet-class>ait.servlet.CartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buy</servlet-name>
        <servlet-class>ait.servlet.BuyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buy</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addToCart</servlet-name>
        <servlet-class>ait.servlet.AddToCart</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addToCart</servlet-name>
        <url-pattern>/addToCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>boughtItems</servlet-name>
        <servlet-class>ait.servlet.BoughtItemsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>boughtItems</servlet-name>
        <url-pattern>/boughtItems</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>ait.InitializerListener</listener-class>
    </listener>
</web-app>
