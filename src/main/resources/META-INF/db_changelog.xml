<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">


    <changeSet id="ait:1" author="suomiy">
        <createSequence sequenceName="sequence"/>

        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="surname" type="varchar(100)"/>
            <column name="email" type="varchar(100)"/>
            <column name="password_hash" type="varchar(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="ait:2" author="studamits">
        <createTable tableName="temperature">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="year" type="integer"/>
            <column name="month" type="integer"/>
            <column name="measurement_type" type="integer"/>
            <column name="temperature" type="decimal(4,1)"/>
        </createTable>
    </changeSet>

    <changeSet id="ait:3" author="suomiy">
        <createTable tableName="shopping_cart">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="status" type="integer"/>
        </createTable>
    </changeSet>

    <changeSet id="ait:4" author="suomiy">
        <sql endDelimiter=";" stripComments="true">
            ALTER TABLE public.shopping_cart ADD date timestamp with time zone;
        </sql>
    </changeSet>

</databaseChangeLog>