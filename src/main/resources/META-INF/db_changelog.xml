<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">


    <changeSet id="ait:1" author="suomiy">
        <createSequence sequenceName="sequence"/>

        <createTable tableName="user">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="surname" type="varchar(100)"/>
        </createTable>
    </changeSet>

    <changeSet id="ait:2" author="suomiy">
        <sql endDelimiter=";" stripComments="true">
            INSERT INTO public.user VALUES (nextval('sequence'), 'Jack', 'Sparrow');
            INSERT INTO public.user VALUES (nextval('sequence'), 'Kate', 'Rose');
        </sql>
    </changeSet>


</databaseChangeLog>